<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Dark" parent="MyMaterialTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:textColorPrimary">@color/colorDarkTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorDarkTextSecondary</item>
        <item name="android:textColorTertiary">@color/colorDarkTextTertiary</item>
        <item name="android:windowBackground">@color/colorDarkBackground</item>

        <item name="preferenceTheme">@style/AppPreferenceDark</item>
        <item name="alertDialogTheme">@style/AppAlertDialogDark</item>

        <item name="android:dividerHeight">4dp</item>
    </style>


    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="alertDialogTheme">@style/AppAlertDialog</item>


    </style>

    <style name="CardView.my" parent="CardView">

        <item name="android:layout_gravity">top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>




    </style>

    <style name="TextView_aenderung">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>

    </style>



    <!-- Style for an Preference Entry -->
    <style name="AppPreferenceDark" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColorPrimary">@color/pref_title_selector</item>
        <item name="android:textColorSecondary">@color/pref_sum_selector</item>
    </style>


    <style name="AppAlertDialogDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorDarkTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorDarkTextSecondary</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
        <item name="textColorAlertDialogListItem">@color/colorDarkTextPrimary</item>
    </style>





    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>


